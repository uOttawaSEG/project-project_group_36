<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 背景颜色（白） -->
    <solid android:color="#FFFFFF" />

    <!-- 边框线条（浅灰） -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- 圆角 -->
    <corners android:radius="8dp" />

    <!-- 内边距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
